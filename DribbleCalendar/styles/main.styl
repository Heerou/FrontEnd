@import nib

// Styulus preporcesor compile with stylus -c -w -u nib main.styl -o main.css

tomato = #f4565f
mediumvioletred = #e01467
crimson = #e21515
orangered = #ec3800
orangered-light = #f97b00
darkorange = #f56e00
goldenrod = #ffb736
khaki = #fced58
olivedrab = #7cb51e
turquoise = #38e3cf
darkcyan = #179c93
royalblue = #1c80cc
royalblue_dark = #2264bf
blue = #0514ed
blueviolet = #8a2aff
violet = #5800d2
darkslategray = #2e3442

html, 
body
    height 100%

body
    background khaki
    font-family 'Baloo Tammudu', cursive, sans-serif;

h3 
    font-size 1.7em
    font-weight normal
    margin-top 0

section 
    background darkslategray
    box-shadow 2.5px 10px 20px rgba(0, 0, 0, 0.5)
    margin 100px auto
    color white
    width 380px
    height 430px
    header
        height 20px
        line-height 20px
        padding 10px
        position relative
        #show-color
            position absolute
            top 20px
            left 20px
            background khaki
            width 7px
            height 7px
            border-radius 50px
            cursor pointer
        #show-menu
            position absolute
            top 13px
            right 20px
            font-size 0.9em
            cursor pointer
    article
        > .active
            display block
        > div        
            display none
        #choose-color-section
            width 70%
            margin 0 auto
            text-align center
            h3 
                margin-bottom 60px
            > div
            // Awesome new way to put things aligned
                display flex
                align-items center
                justify-content space-between
                margin-bottom 10px
                // The pointer
                span 
                    width 40px
                    height 40px
                    border-radius 50%
                    border 4px solid transparent
                    cursor pointer
                    transition 0.3s ease all
                    &.active,
                    &:hover
                        border-color white                    
                #tomato
                    background tomato
                #mediumvioletred
                    background mediumvioletred
                #crimson
                    background crimson
                #orangered
                    background orangered
                #orangered-light
                    background orangered-light
                #darkorange
                    background darkorange
                #goldenrod
                    background goldenrod
                #khaki
                    background khaki
                #olivedrab
                    background olivedrab
                #turquoise
                    background turquoise
                #darkcyan
                    background darkcyan
                #royalblue
                    background royalblue
                #royalblue_dark
                    background royalblue_dark
                #blue
                    background blue
                #blueviolet
                    background blueviolet
                #violet
                    background violet

        #calendar-section
            text-align center
            width 85%
            margin 0 auto
            .fc-scroller 
                overflow-y hidden !important
            .fc-slats,
            .fc-content-skeleton,
            .fc-bgevent-skeleton
                pointer-events none
            .fc-bgevent,
            .fc-event-container
                pointer-events auto
            .fc-right
                margin-right 60px
            .fc-left
                margin-left 60px
            .fc-right,
            .fc-left
                button
                    background none
                    box-shadow none
                    outline none
                    border none
            .fc-center
                color khaki
                font-size 1em            
            .fc-day-grid-container                
                overflow hidden
            .fc-other-month
                visibility hidden
            .fc-day,
            .fc-day-number
                text-align center
                cursor pointer
                z-index 99999
                position relative
            .fc-row
                min-height 1.5em
            .fc-widget-header,
            .fc-widget-content
                border none
                font-size 1.15em
            .fc-today
                background transparent
                color khaki
            .fc-icon-right-single-arrow:after,
            .fc-icon-left-single-arrow:after
                color gray
            .with-event                          
                border 2px solid khaki
                border-radius 50%
                display block
                height 30px
                width 30px
                left 0
                right 0
                margin 4px 13px                
            .new-event-date
                position relative
                border 2px solid transparent
                border-radius 50%
                display block
                height 28px
                width 28px
                margin-left 8px
            .add-event-active:after
                background khaki
            .td-with-event
                color #29323f
            .add-event-section
                height 60px
                line-height 60px
                background white
                width 100%
                display none
                margin-top 13px
                z-index 99999
                div
                    position relative
                    height 100%
                    span
                        width 0
                        height 0
                        border-left 6px solid transparent
                        border-right 6px solid transparent
                        border-bottom 6px solid white
                        position absolute
                        top -6px
                    .fa
                        position absolute
                        right 10px
                        top 15px
                        color lightgray
                        font-size 1.4em
                    input
                        border none
                        display block
                        height 100%
                        width 100%
                        padding 10px
                        box-sizing border-box
                        outline none
                        font-size 1em